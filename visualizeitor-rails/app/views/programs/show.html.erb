<%= javascript_include_tag 'draw_program.js'%>
<%= javascript_include_tag 'program_show.js'%>
<%= hidden_field_tag 'program_id', @program.id %>

<div id="loading"><img src="/assets/ajax-loader.gif" alt="Smiley face"></div>

<%- model_class = Program -%>
<div class="page-header">
  <h1><%=@program.name%></h1>
</div>


<div class="alert alert-success" id="did-save-alert">
  <strong>Sucesso!</strong> Grade alterada.
</div>
<div class="alert alert-error" id="did-not-save-alert">
  <strong>Erro!</strong> Não foi possível alterar a grade.
</div>
<input type="submit" value="Salvar Grade" onclick="save()" class="btn btn-success">
<div id="program-container"></div>
<input type="submit" value="Salvar Grade" onclick="save()" class="btn btn-success">

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @program.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @program.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @program.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:major_id) %>:</strong></dt>
  <dd><%= @program.major_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              programs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_program_path(@program), :class => 'btn' %>
  
</div>
