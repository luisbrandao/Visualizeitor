<h1>Listando Categorias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Horas por semestre</th>
      <th>Maximo de horas</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.descr %></td>
        <td><%= category.softlimit %></td>
        <td><%= category.hardlimit %></td>
        <td><%= link_to 'Show', category %>
        <%= link_to 'Edit', edit_category_path(category) %>
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
