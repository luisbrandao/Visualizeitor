<%= form_for(@internship) do |f| %>

  <div class="field">
    <%= f.label :contact_id %><br>
    <%= f.collection_select(:contact_id, @contacts, :id, :to_s, { :prompt => "Selecione uma contato" } ) %>
  </div>

  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_select :start, order: [:day,:month, :year] %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_select :end, order: [:day,:month, :year]%>
  </div>
  <div class="field">
    <%= f.label :hours, "Horas/Semana" %><br>
    <%= f.number_field :hours %>
  </div>

  <div class="field">
    <%= f.label :assignment, "Atividade do estagiário" %><br>
    <%= f.text_field :assignment %>
  </div>

  <div class="field">
    <%= f.label :goals, "Atividades a serem desenvolvidas" %><br>
    <%= f.text_area :goals %>
  </div>

  <div class="field">
    <%= f.label :internType, "Tipo de estágio" %><br />
    <%= f.select :internType, [["Obrigatório", 0], ["Não Obrigatório", 1]] %>
  </div>

  <div class="field">
    <%= f.label :assistType, "Tipo de supervisão" %><br />
    <%= f.select :assistType, [["Direta", 0], ["Semi-direta", 1], ["Indireta", 2]] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
